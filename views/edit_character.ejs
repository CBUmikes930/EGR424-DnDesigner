<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <h1 id="character_name_label">Enter Character Name:</h1>
    <input type="text" id="character_name">
    <br><br><hr><br>

    <div id="races">
        <h1>Step 1: Choose a Race</h1>
        <% races.forEach((cur_race) => { %>
            <%- include("./partials/race.ejs", {cur_race: cur_race}) %>
        <% }) %>
    </div>

    <div id="classes">
        <h1>Step 2: Choose a Class</h1>
        <% classes.forEach((cur_class) => { %>
            <%- include("./partials/class.ejs", {cur_class: cur_class}) %>
        <% }) %>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>
</html>