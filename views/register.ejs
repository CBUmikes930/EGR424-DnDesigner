<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <div id="login">
        <h1>Register</h1>
        <form method="POST">
            <br><hr><br>
            <label for="username">Username:</label><input class="text-input" type="text" name="username">
            <br><br>
            <label for="password">Password:</label><input class="text-input" type="text" name="password">
            <br><br>
            <label for="password_2">Confirm Password:</label><input class="text-input" type="text" name="password_2">
            <br><br>
            <p id="error"><%= error %></p>
            <hr><br>
            <input type="submit" value="Register">
        </form>
        <span>Already have an account? <a href="/user/login">Log-in here</a></span>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>
</html>